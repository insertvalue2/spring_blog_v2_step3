{{> layout/header}} <!-- 공통된 헤더 부분. Mustache 템플릿에서 재사용되는 레이아웃의 상단부 -->

<main class="container p-5 content">
  <!-- 이 폼은 사용자가 입력한 데이터를 "/user/update" 경로로 POST 요청을 통해 서버에 전송함 -->
  
  <div class="card">
    <div class="card-header"><b>{{name}}</b></div>
    <div class="card-body">
      <form action="/user/update" method="post" enctype="application/x-www-form-urlencoded">
        <!-- username 입력 필드 (수정 불가) -->
        <div class="mb-3">
          <input value="{{user.username}}" type="text" class="form-control" placeholder="Enter username" disabled>
        </div>
        <!-- password 입력 필드 -->
        <div class="mb-3">
          <input type="password" class="form-control" placeholder="Enter password" name="password">
        </div>
        <!-- email 입력 필드 -->
        <div class="mb-3">
          <input value="{{user.email}}" type="email" class="form-control" placeholder="Enter email" name="email">
        </div>
        <!-- 회원정보 수정 버튼 -->
        <button type="submit" class="btn btn-primary form-control">회원정보 수정</button>
      </form>
    </div>
  </div>
</main>

{{> layout/footer}} <!-- 공통된 푸터 부분. Mustache 템플릿에서 재사용되는 레이아웃의 하단부 -->
